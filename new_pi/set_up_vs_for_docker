# set up VS for docker

--------Extension
Docker <name: Docker>
Remote - Containers <name: Dev Containers>

mkdir ~/ros2_dev
cd ~/ros2_dev

mkdir .devcontainer
cd .devcontainer

nano devcontainer.json

{
  "name": "ROS2 Jazzy Dev",
  "image": "mariame42/ros2_jazzy_env:arm64",
  "runArgs": [
    "--name", "ros2_container",
    "-v", "/:/host"
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  }
}

